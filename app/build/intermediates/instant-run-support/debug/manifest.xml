<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.saymondev.apptweaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="io.github.saymondev.apptweaker.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.saymondev.apptweaker.SelectApp"
            android:label="@string/title_activity_select_app"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.github.saymondev.apptweaker.TweakSelector"
            android:label="@string/title_activity_tweak_selector"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>